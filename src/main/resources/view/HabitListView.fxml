<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>

<VBox spacing="15" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="org.habittracker.controller.HabitListController" style="-fx-padding: 20;">
    <!-- Header -->
    <Label text="Habit Tracker" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Habit List Section -->
    <VBox spacing="10">
        <Label text="Your Habits" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <ListView fx:id="habitListView" prefHeight="250" prefWidth="400" onMouseClicked="#onHabitSelected"/>

        <!-- Control Buttons -->
        <HBox spacing="10" alignment="CENTER">
            <Button text="View Progress" onAction="#onViewProgress" />
            <Button fx:id="editButton" onAction="#onEditHabit" text="Edit Habit" />
            <Button text="Delete Selected" onAction="#onDeleteHabit" />
            <Button text="Mark as Completed" onAction="#onMarkAsCompleted" />
        </HBox>
    </VBox>

    <!-- Close Button at the Bottom -->
    <Label fx:id="notificationLabel" text="" style="-fx-text-fill: red;" visible="false"/>
    <Button text="Back" onAction="#goBack" style="-fx-padding: 5 20;" />
</VBox>
