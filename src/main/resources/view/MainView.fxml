<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="rootStackPane" xmlns:fx="http://javafx.com/fxml" fx:controller="org.habittracker.controller.MainController">
    <!-- Main View -->
    <VBox fx:id="mainView" alignment="CENTER" spacing="10.0" visible="true">
        <!-- Header Row with Title and Settings Button -->
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
            <!-- Spacer to push title to the center -->
            <Pane HBox.hgrow="ALWAYS"/>

            <!-- Title Label -->
            <Label text="Habit Tracker" style="-fx-font-size: 24px; -fx-font-weight: bold;" styleClass="heading"/>

            <!-- Spacer to push settings button to the right -->
            <Pane HBox.hgrow="ALWAYS"/>

            <!-- Settings Icon Button -->
            <Button fx:id="settingsButton" text="⚙️" onAction="#openSettings"
                    style="-fx-background-color: transparent; -fx-font-size: 20px;"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <Button text="Add New Habit" onAction="#showAddHabitView" styleClass="primary-button"/>
            <Button text="View Habits" onAction="#showHabitListView" styleClass="primary-button"/>
        </HBox>

        <!-- Habits Due Today Section -->
        <VBox spacing="5" alignment="CENTER">
            <Label text="Habits To Do Today" style="-fx-font-size: 18px; -fx-font-weight: bold;" styleClass="heading"/>
            <ListView fx:id="habitsDueTodayList" prefHeight="100" prefWidth="300" />
        </VBox>

        <!-- Calendar Section -->
        <VBox spacing="5" alignment="CENTER">
            <Label text="Calendar" style="-fx-font-size: 18px; -fx-font-weight: bold;" styleClass="heading"/>
            <GridPane fx:id="calendarGrid" hgap="10" vgap="10" alignment="CENTER" style="-fx-padding: 20;" />
        </VBox>
    </VBox>

    <!-- Placeholder for dynamically loaded views -->
    <VBox fx:id="dynamicViewContainer" visible="false" alignment="CENTER" spacing="10"/>
</StackPane>
