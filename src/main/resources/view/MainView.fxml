<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="rootStackPane" xmlns:fx="http://javafx.com/fxml" fx:controller="org.habittracker.controller.MainController">
    <!-- Main View -->
    <VBox fx:id="mainView" alignment="CENTER" spacing="10.0" visible="true">
        <Label text="Habit Tracker" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

        <!-- Buttons -->
        <HBox spacing="10" alignment="CENTER">
            <Button text="Add New Habit" onAction="#showAddHabitView"/>
            <Button text="View Habits" onAction="#showHabitListView"/>
        </HBox>

        <!-- Habits Due Today Section -->
        <VBox spacing="5" alignment="CENTER">
            <Label text="Habits To Do Today" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <ListView fx:id="habitsDueTodayList" prefHeight="100" prefWidth="300" />
        </VBox>

        <!-- Calendar Section -->
        <VBox spacing="5" alignment="CENTER">
            <Label text="Calendar" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <GridPane fx:id="calendarGrid" hgap="10" vgap="10" alignment="CENTER" />
        </VBox>
    </VBox>

    <!-- Placeholder for dynamically loaded views -->
    <VBox fx:id="dynamicViewContainer" visible="false" alignment="CENTER" spacing="10"/>
</StackPane>
