<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="org.habittracker.controller.AddHabitController">
    <Label text="Add New Habit" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Label text="Habit Name:"/>
    <TextField fx:id="habitNameField" promptText="Enter habit name" />

    <Label text="Frequency:"/>
    <ChoiceBox fx:id="frequencyChoiceBox">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Daily"/>
                <String fx:value="Weekly"/>
                <String fx:value="Monthly"/>
            </FXCollections>
        </items>
    </ChoiceBox>

    <Label text="Start Date:"/>
    <DatePicker fx:id="startDatePicker"/>

    <Button text="Add Habit" onAction="#addHabit"/>
    <Button text="Back" onAction="#goBack"/>

    <!--Confirmation message label-->
    <Label fx:id="confirmationMessageLabel" text="Habit added successfully!" visible="false" style="-fx-text-fill: green; -fx-font-weight: bold;"/>
</VBox>
