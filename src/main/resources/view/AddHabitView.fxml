<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>

<?import java.lang.String?>
<VBox spacing="15" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="org.habittracker.controller.AddHabitController" styleClass="add-habit-container">
    <Label text="Add New Habit" styleClass="title-label" />

    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Habit Name:" styleClass="input-label"/>
        <TextField fx:id="habitNameField" promptText="Enter habit name" styleClass="rounded-input" />
    </VBox>

    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Frequency:" styleClass="input-label"/>
        <ChoiceBox fx:id="frequencyChoiceBox" styleClass="rounded-choicebox">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Daily"/>
                    <String fx:value="Weekly"/>
                    <String fx:value="Monthly"/>
                </FXCollections>
            </items>
        </ChoiceBox>
    </VBox>

    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Start Date:" styleClass="input-label"/>
        <DatePicker fx:id="startDatePicker" styleClass="rounded-datepicker"/>
    </VBox>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Add Habit" onAction="#addHabit" styleClass="primary-button"/>
        <Button text="Back" onAction="#goBack" styleClass="secondary-button"/>
    </HBox>

    <!-- Confirmation message label -->
    <Label fx:id="confirmationMessageLabel" text="Habit added successfully!" visible="false" styleClass="confirmation-label"/>
</VBox>
