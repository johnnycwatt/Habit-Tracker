<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" xmlns:fx="http://javafx.com/fxml" fx:controller="org.habittracker.controller.SettingsController" style="-fx-padding: 15;">

    <!-- Title Label -->
    <Label text="Settings" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;" styleClass="title-label"/>

    <!-- Dark Mode Section -->
    <VBox alignment="CENTER" spacing="5">
        <Label text="Dark Mode" style="-fx-font-size: 16px; -fx-font-weight: bold;" styleClass="heading"/>
        <HBox alignment="CENTER" spacing="10">
            <Button text="Enable Dark Mode" onAction="#enableDarkMode" styleClass="primary-button"/>
            <Button text="Disable Dark Mode" onAction="#disableDarkMode" styleClass="primary-button"/>
        </HBox>
    </VBox>

    <!-- Divider -->
    <Separator prefWidth="500" style="-fx-background-color: #cccccc;"/>

    <!-- Habit Reminders Section -->
    <VBox alignment="CENTER" spacing="5">
        <Label text="Habit Reminders" style="-fx-font-size: 16px; -fx-font-weight: bold;" styleClass="heading"/>
        <Label text="Receive reminders a day in advance for weekly and monthly habits to help you stay on track."
               wrapText="true" style="-fx-font-size: 12px; -fx-text-fill: gray; -fx-alignment: center;" maxWidth="450"/>
        <HBox alignment="CENTER" spacing="10">
            <Button text="Enable Reminders" onAction="#enableReminders" styleClass="primary-button"/>
            <Button text="Disable Reminders" onAction="#disableReminders" styleClass="primary-button"/>
        </HBox>
    </VBox>

    <!-- Divider -->
    <Separator prefWidth="500" style="-fx-background-color: #cccccc;"/>

    <!-- Automatic Backup Section -->
    <VBox alignment="CENTER" spacing="5">
        <Label text="Automatic Monthly Backup" style="-fx-font-size: 16px; -fx-font-weight: bold;" styleClass="heading"/>
        <Label text="Don't lose your progress. Back up your habit tracking data to a JSON file."
               wrapText="true" style="-fx-font-size: 12px; -fx-text-fill: gray; -fx-alignment: center;" maxWidth="450"/>
        <HBox alignment="CENTER" spacing="10">
            <Button text="Enable Automatic Backup" onAction="#enableAutoBackup" styleClass="primary-button"/>
            <Button text="Disable Automatic Backup" onAction="#disableAutoBackup" styleClass="primary-button"/>
        </HBox>
    </VBox>

    <!-- Divider -->
    <Separator prefWidth="500" style="-fx-background-color: #cccccc;"/>

    <!-- Manual Backup and Restore Data Section -->
    <HBox alignment="CENTER" spacing="50">
        <!-- Manual Backup Section -->
        <VBox alignment="CENTER" spacing="5">
            <Label text="Manual Backup" style="-fx-font-size: 16px; -fx-font-weight: bold;" styleClass="heading"/>
            <Label text="Manually export your Habit Data to a JSON file."
                   wrapText="true" style="-fx-font-size: 12px; -fx-text-fill: gray; -fx-alignment: center;" maxWidth="180"/>
            <Button text="Export to JSON" onAction="#backupDataToJson" styleClass="primary-button"/>
        </VBox>

        <!-- Restore Data Section -->
        <VBox alignment="CENTER" spacing="5">
            <Label text="Restore Data" style="-fx-font-size: 16px; -fx-font-weight: bold;" styleClass="heading"/>
            <Label text="Supports full JSON backups generated by this application."
                   wrapText="true" style="-fx-font-size: 12px; -fx-text-fill: gray; -fx-alignment: center;" maxWidth="180"/>
            <Button text="Import Data" onAction="#restoreDataFromJson" styleClass="primary-button"/>
        </VBox>
    </HBox>

    <!-- Divider -->
    <Separator prefWidth="500" style="-fx-background-color: #cccccc;"/>

    <!-- Notification Label -->
    <Label fx:id="notificationLabel" visible="false" styleClass="notification-label"/>

    <!-- Back Button -->
    <Button text="Back" onAction="#goBack" styleClass="secondary-button" prefWidth="100"/>
</VBox>
