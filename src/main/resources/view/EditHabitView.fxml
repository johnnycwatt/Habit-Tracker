<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.layout.HBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/javafx"
     fx:controller="org.habittracker.controller.EditHabitController">

    <Label text="Edit Habit" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <VBox spacing="5" alignment="CENTER" style="-fx-padding: 10;">

        <Label text="Habit Name:"/>
        <TextField fx:id="habitNameField" promptText="Enter habit name"/>

        <Label text="Frequency:"/>
        <ChoiceBox fx:id="frequencyChoiceBox">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Daily"/>
                    <String fx:value="Weekly"/>
                    <String fx:value="Monthly"/>
                </FXCollections>
            </items>
        </ChoiceBox>

        <Label text="Start Date:"/>
        <DatePicker fx:id="startDatePicker"/>

    </VBox>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Save Changes" onAction="#onSaveChanges" />
        <Button text="Cancel" onAction="#onCancel" />
    </HBox>

</VBox>
