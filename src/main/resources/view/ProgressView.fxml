<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.CategoryAxis?>

<VBox spacing="15" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="org.habittracker.controller.ProgressController" style="-fx-padding: 20;">

    <!-- Main Header -->
    <Label text="Habit Progress" style="-fx-font-size: 24px; -fx-font-weight: bold;" styleClass="title-label" />

    <!-- Habit Name -->
    <Label fx:id="habitNameLabel" style="-fx-font-size: 18px;" styleClass="heading"/>

    <!-- Streak Section -->
    <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10; -fx-border-color: #ddd; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;">
        <Label text="Current Streak:" style="-fx-font-size: 14px;" styleClass="heading"/>
        <Label fx:id="currentStreakLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" styleClass="heading"/>
    </HBox>

    <!-- Statistics Section -->
    <VBox spacing="10" alignment="CENTER" style="-fx-padding: 15; -fx-border-color: #ddd; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;">
        <Label text="Statistics" style="-fx-font-size: 20px; -fx-font-weight: bold;" styleClass="heading"/>

        <!-- Performance Row -->
        <HBox spacing="20" alignment="CENTER">
            <VBox alignment="CENTER">
                <Label text="Weekly Performance:" style="-fx-font-size: 14px;" styleClass="heading"/>
                <Label fx:id="weeklyPerformanceLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" styleClass="heading"/>
            </VBox>
            <VBox alignment="CENTER">
                <Label text="Monthly Performance:" style="-fx-font-size: 14px;" styleClass="heading"/>
                <Label fx:id="monthlyPerformanceLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" styleClass="heading"/>
            </VBox>
            <VBox alignment="CENTER">
                <Label text="Overall Performance:" style="-fx-font-size: 14px;" styleClass="heading"/>
                <Label fx:id="overallPerformanceLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" styleClass="heading"/>
            </VBox>
        </HBox>

        <!-- Completions and Streak Row -->
        <HBox spacing="20" alignment="CENTER">
            <VBox alignment="CENTER">
                <Label text="Total Completions:" style="-fx-font-size: 14px;" styleClass="heading"/>
                <Label fx:id="totalCompletionsLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" styleClass="heading"/>
            </VBox>
            <VBox alignment="CENTER">
                <Label text="Best Streak:" style="-fx-font-size: 14px;" styleClass="heading"/>
                <Label fx:id="bestStreakLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" styleClass="heading"/>
            </VBox>
        </HBox>
    </VBox>

    <!-- Calendar Section -->
    <GridPane fx:id="calendarGrid" hgap="10" vgap="10" alignment="CENTER" style="-fx-padding: 15; -fx-border-color: #ddd; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;" prefWidth="600">
        <!-- Calendar cells will be dynamically populated in the controller -->
    </GridPane>

    <!-- History Section -->
    <VBox spacing="15" alignment="CENTER">
        <Label fx:id="historyLabel" text="History" style="-fx-font-size: 20px;" />

        <!-- Define BarChart with CategoryAxis and NumberAxis -->
        <BarChart fx:id="historyChart" prefWidth="600" prefHeight="250">
            <xAxis>
                <CategoryAxis label="Period" />
            </xAxis>
            <yAxis>
                <NumberAxis label="Completions" tickUnit="1" />
            </yAxis>
        </BarChart>
    </VBox>

    <!-- Back Button -->
    <Button text="Back" onAction="#goBack" styleClass="secondary-button" style="-fx-padding: 10 20; -fx-background-color: #2E8B57; -fx-text-fill: white; -fx-font-size: 14px;" />

    <!-- Confirmation Message Label -->
    <Label fx:id="notificationLabel" text="" visible="false" styleClass="notification-label"/>
</VBox>
