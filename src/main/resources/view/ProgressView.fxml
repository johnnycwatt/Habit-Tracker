<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="org.habittracker.controller.ProgressController">
    <Label text="Habit Progress" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Label fx:id="habitNameLabel" style="-fx-font-size: 16px;"/>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Current Streak:"/>
        <Label fx:id="currentStreakLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
    </HBox>

    <GridPane fx:id="calendarGrid" hgap="5" vgap="5" alignment="CENTER" style="-fx-padding: 10;">
        <!-- Calendar cells will be dynamically populated in the controller -->
    </GridPane>

    <Button text="Back" onAction="#goBack" styleClass="secondary-button"/>
</VBox>
