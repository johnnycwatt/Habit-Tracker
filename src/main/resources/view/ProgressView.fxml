<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.CategoryAxis?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="org.habittracker.controller.ProgressController" style="-fx-padding: 15;">

    <!-- Main Header -->
    <Label text="Habit Progress" style="-fx-font-size: 20px; -fx-font-weight: bold;" styleClass="title-label" />

    <!-- Habit Name -->
    <Label fx:id="habitNameLabel" style="-fx-font-size: 16px;" styleClass="heading"/>

    <!-- Streak Section (Current and Best Streak) -->
    <HBox spacing="10" alignment="CENTER" style="-fx-padding: 5; -fx-border-color: #ddd; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;">
        <VBox alignment="CENTER">
            <Label text="Current Streak:" style="-fx-font-size: 12px;" styleClass="heading"/>
            <Label fx:id="currentStreakLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;" styleClass="heading"/>
        </VBox>
        <VBox alignment="CENTER">
            <Label text="Best Streak:" style="-fx-font-size: 12px;" styleClass="heading"/>
            <Label fx:id="bestStreakLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;" styleClass="heading"/>
        </VBox>
    </HBox>

    <!-- Statistics Section -->
    <VBox spacing="8" alignment="CENTER" style="-fx-padding: 10; -fx-border-color: #ddd; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;">
        <Label text="Statistics" style="-fx-font-size: 18px; -fx-font-weight: bold;" styleClass="heading"/>

        <!-- Performance Row -->
        <HBox spacing="15" alignment="CENTER">
            <VBox alignment="CENTER">
                <Label text="Weekly Performance:" style="-fx-font-size: 12px;" styleClass="heading"/>
                <Label fx:id="weeklyPerformanceLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;" styleClass="heading"/>
            </VBox>
            <VBox alignment="CENTER">
                <Label text="Monthly Performance:" style="-fx-font-size: 12px;" styleClass="heading"/>
                <Label fx:id="monthlyPerformanceLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;" styleClass="heading"/>
            </VBox>
            <VBox alignment="CENTER">
                <Label text="Overall Performance:" style="-fx-font-size: 12px;" styleClass="heading"/>
                <Label fx:id="overallPerformanceLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;" styleClass="heading"/>
            </VBox>
        </HBox>

        <!-- Consistency Metrics Row -->
        <HBox spacing="15" alignment="CENTER">
            <VBox alignment="CENTER">
                <Label text="Weekly Consistency:" style="-fx-font-size: 12px;" styleClass="heading"/>
                <Label fx:id="weeklyConsistencyLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;" styleClass="heading"/>
            </VBox>
            <VBox alignment="CENTER">
                <Label text="Monthly Consistency:" style="-fx-font-size: 12px;" styleClass="heading"/>
                <Label fx:id="monthlyConsistencyLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;" styleClass="heading"/>
            </VBox>
        </HBox>

        <!-- Total Completions Row -->
        <HBox spacing="15" alignment="CENTER">
            <VBox alignment="CENTER">
                <Label text="Total Completions:" style="-fx-font-size: 12px;" styleClass="heading"/>
                <Label fx:id="totalCompletionsLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;" styleClass="heading"/>
            </VBox>
        </HBox>
    </VBox>

    <!-- Calendar Section Header with Current Month -->
    <Label fx:id="calendarMonthLabel" text="" style="-fx-font-size: 18px; -fx-padding: 5 0;" />

    <!-- Calendar Section with Day Names -->
    <VBox alignment="CENTER">

        <!-- Calendar Grid -->
        <GridPane fx:id="calendarGrid" hgap="8" vgap="8" alignment="CENTER" style="-fx-padding: 10; -fx-border-color: #ddd; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;" prefWidth="600">
            <!-- Calendar cells will be dynamically populated in the controller -->
        </GridPane>
    </VBox>


    <!-- History Section Header -->
    <Label fx:id="historyLabel" text="History" style="-fx-font-size: 18px; -fx-padding: 5 0;" />

    <!-- History Chart -->
    <BarChart fx:id="historyChart" prefWidth="600" prefHeight="200">
        <xAxis>
            <CategoryAxis label="Period" />
        </xAxis>
        <yAxis>
            <NumberAxis label="Completions" tickUnit="1" />
        </yAxis>
    </BarChart>

    <!-- Back Button -->
    <Button text="Back" onAction="#goBack" styleClass="secondary-button" style="-fx-padding: 10 20; -fx-background-color: #2E8B57; -fx-text-fill: white; -fx-font-size: 12px;" />

    <!-- Confirmation Message Label -->
    <Label fx:id="notificationLabel" text="" visible="false" styleClass="notification-label"/>
</VBox>

